<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title>{{title}}</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="/stylesheets/auth.css" />
   </head>

   <body>

    <div class="container-fluid bgauth" >

      <div  class="row justify-content-center g-0">
        <div class="col col-lg-6  pt-1">
            <h1 class="centerText"> Welcome to Mangakafe</h1>
        </div>
      </div>

      <div class="row justify-content-start g-0 pt-4">
        <div class=" col col-lg-4 col-sm-12 col-md-6   align-self-end">
            <img src="../../images/auth/naruto-signup.png" class ="narutoImg"  alt="naruto" >
        </div>
        <div class="col col-lg-4 col-sm-12 col-md-6  pt-2 align-self-center "  >
          <div class="centerDiv">
              <div id="g_id_onload"
                data-client_id="43894148885-moag9ij740ugupq36u2tnqcutvhp321p.apps.googleusercontent.com"
                data-auto_prompt="false"
                data-callback="handleCredentialResponse">
              </div>
              <div class="g_id_signin"
                data-type="standard"
                data-size="large"
                data-theme="outline"
                data-text="sign_in_with"
                data-shape="rectangular"
                data-logo_alignment="left">
              </div>
          </div>

          <p class="centerText boldtext pt-4"> OR </p>

          <form  method="POST" action="/auth/login" class="pt-3">
              <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" class="form-control inputAuth" id="email"  name="email" placeholder="Enter your email address" required>
              </div>
              <div class="mb-3 pb-2">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control inputAuth" id="password" name="password"  placeholder="Enter your password"  required>
              </div>
              <a href="/auth/forgot_password">Forgot your password?</a>
              <div class="centerDiv pt-5">
                  <button type="submit" class="buttonAut">LOGIN</button>
              </div>
              
          </form>
          <p class="centerText pt-3 pb-5">CREATE NEW ACCOUNT <a href="/auth/signup">SIGN UP </a></p>
          {{#if errorMessage}}
              <p class="error ">{{errorMessage}}</p>
          {{/if}}
        </div>
        
      </div>
      
    </div>

        <script src="https://accounts.google.com/gsi/client" async defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
   </body>
</html>

<script>
   function handleCredentialResponse(response) {
    console.log(response.credential)
    const data = { id_token: response.credential };
    var url = ( window.location.hostname.includes('localhost'))
                    ? 'http://localhost:3000/auth/loginggoogle'
                    : 'https://mangakafe.herokuapp.com/auth/loginggoogle'

    fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
        .then(resp => {
          window.open(resp.url, '_self'); 
        })
        .then(data => console.log('Nuestro server', data))
        .catch(console.log);
}
</script>






