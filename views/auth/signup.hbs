<script src="https://accounts.google.com/gsi/client" async defer></script>


  <div class="container-fluid bgauth" >

    <div  class="row justify-content-center g-0">
      <div class="col col-lg-6  pt-1">
          <h1 class="centerText"> Welcome to Mangakafe</h1>
      </div>
    </div>
    
    <div class="row justify-content-start g-0">
      <div class=" col-12 col-lg-4  align-self-end">
          <img src="../../images/auth/naruto-signup.png" class ="narutoImg  d-none d-lg-block"  alt="naruto" >
      </div>
      <div class="col-12 col-lg-4  pt-2 align-self-center "  >
        <div class="centerDiv">
            <div id="g_id_onload"
              data-client_id="43894148885-moag9ij740ugupq36u2tnqcutvhp321p.apps.googleusercontent.com"
              data-auto_prompt="false"
              data-callback="handleCredentialResponse">
            </div>
            <div class="g_id_signin"
              data-type="standard"
              data-size="large"
              data-theme="outline"
              data-text="sign_in_with"
              data-shape="rectangular"
              data-logo_alignment="left">
            </div>
        </div>

        <p class="centerText boldtext pt-3"> OR </p>

        <form method="POST" action="/auth/signup" >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control inputAuth" id="name" name="name" placeholder="Enter your name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control inputAuth" id="email" aria-describedby="emailHelp" name="email"  placeholder="Enter your email address"  required>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control inputAuth" id="password" name="password"  placeholder="Enter your password"  required>
          </div>
          <div class="mb-3">
            <label for="confpassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control inputAuth" id="confpassword" name="confirmpassword"   placeholder="Enter your password" required>
          </div>
          
          <div class="centerDiv pt-3">
          <button type="submit" class="buttonAut" >SIGN UP</button>
          </div>

        </form>
        
        <p class="centerText pt-2">ALREADY A MEMBER? <a href="/auth/login">SIGN IN </a></p>
        
        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
      </div>
      
    </div>
  </div>

<script>
   function handleCredentialResponse(response) {
    console.log(response.credential)
    const data = { id_token: response.credential };
    const url = 'http://localhost:3000/auth/signupgoogle'

    fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        })
        .then(resp => {
          window.open(resp.url, '_self'); 
        })
        .then(data => console.log('Nuestro server', data))
        .catch(console.log);

}
</script>